import java.util.*;
import java.util.List;
public class Main{
    
    public static void main(String args[]){

        // ArrayList<Integer>list= new ArrayList();
        List<Integer> list = new ArrayList();
        list.add(1);
        list.add(2);
        list.add(3);
        System.out.println(list);
    }
}

